/* pages/onineCourse/onlineCourse.wxss */
page {
  height: 100%;
}
.hd {
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  padding-top: 40rpx;
  background: linear-gradient(#79CDCD,#009999);
  border-radius: 0 0 30% 30%;
  display: flex;
  justify-content: center;
}
.hd-title {
  margin-right: 10rpx;
  color: #fff;
}
.hd-status {
  width: 50rpx;
  height: 50rpx;
}
.hd-sign {
  width: 50rpx;
  height: 50rpx;
}
.bd {
  width: 85%;
  height: calc(100% - 160px);
  background-color: #F7F7FA;
  margin-top: -80rpx;
  margin-left: auto;
  margin-right: auto;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 30rpx;
  text-align: center;
}
.bd-content {
  margin-bottom: 20rpx;

}
.input{
  margin-left: 20rpx;
  width: calc(100% - 160rpx);
}
.send {
  width: 60rpx;
  height: 60rpx;
}
.ask {
  width: 60rpx;
  height: 60rpx;
}
.ask:active {
  filter: brightness(0%);
  transition: filter .3s linear 0s;
}
.hasSign {
  text-align: center;
  margin-top: 10px;
}