/* pages/class/class.wxss */
page {
  height: 100%;
}
.weui-search-bar {
  background-color: #47B2B2;
  border: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1111;
}
.scan {
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
}
.scan:active {
  filter: brightness(0.7) contrast(120%);
}
.weui-search-bar__cancel-btn {
  letter-spacing: 2rpx;
  margin-left: 20rpx;
  width: 60rpx;
  color: #fff;

  line-height: 60rpx;
}
.serachbar-area{
  position: fixed;
  top: 92rpx;
  left: 0;
  width: 100%;
  z-index: 1111;
  background: #F7F7FA;
}
.searchbar_over{
  width: 100%;
  height: 92rpx;
}
.weui-panel__bd {
  background-color: #F7F7FA;
}
.searchbar-result{
    margin-top: 0;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 20rpx;
}
.hint-bd {
  width: 100%;
  height: calc(100% - 46px);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #C3C3C3;
}
.hint-img {
  width: 100rpx;
  height: 100rpx;
}
.btn {
  width: 120rpx;
  height: 120rpx;
  position: fixed;
  bottom: 5%; 
  right: 5%;
  border-radius: 50%;
}
.modal{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 9999;
  color: #fff;
}
.modal_dialog{
  width: 70%;
  position: fixed;
  top: 25%;
  left: 15%;
  z-index: 9999;
  background: white;
  border-radius: 5px;
}
.modal_title{
  font-size: 1.2em;
  margin: 30rpx 0 20rpx 0;
  color: black;
  text-align: center;
}
.modal_content{
  padding: 0 30rpx;
  margin-bottom: 50rpx;
}
.modal_input{
  height: 60rpx;
  padding: 2rpx 5rpx;
  color: black;
  border: 1rpx solid gainsboro;
  border-radius: 10rpx;
}
.modal_btn{
  display: flex;
  border-top: 1rpx solid #dedede;
  overflow: hidden;
}
.modal_cancel{
  flex: 1;
  color: black;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 0 0 10rpx 0;
}
.modal_confirm{
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  color: white;
  background-color: #009999;
  border-radius: 0 0 10rpx 0;
}